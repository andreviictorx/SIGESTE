{
  "compilerOptions": {
    "target": "esnext",                 
    "module": "esnext",                 
    "outDir": "./dist",              
    "rootDir": "./src",              
    "strict": true,                  
    "esModuleInterop": true,         
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,            
    "noImplicitAny": true,           
    "removeComments": true,          
    "sourceMap": false               
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
